                    <div class=" form-group">
                        <label for="exampleInputName1">الحجرة</label>
                        <input type="text" class="form-control" id="room" placeholder=" الحجرة" name="room">
                        @Html.ValidationMessageFor(n => n.room)
                    </div>
                    <div class=" form-group">
                        <label for="exampleInputName1">معلومات إضافية</label>
                        <input type="text" class="form-control" id="additionalInformation" placeholder=" معلومات إضافية" name="additionalInformation">
                        @Html.ValidationMessageFor(n => n.additionalInformation)
                    </div>
                    <div class=" form-group">
                        <label for="exampleInputName1">علامة مميزة</label>
                        <input type="text" class="form-control" id="landmark" placeholder=" علامة مميزة" name="landmark">
                        @Html.ValidationMessageFor(n => n.landmark)
                    </div>
                    <div class=" form-group">
                        @Html.LabelFor(n => n.phone)
                        @Html.TextBoxFor(n => n.phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.phone)
                    </div>
                    <div class=" form-group">
                        @Html.LabelFor(n => n.tax_regsistration_number)
                        @Html.TextBoxFor(n => n.tax_regsistration_number, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.tax_regsistration_number)
                    </div>
                    <div class=" form-group">
                        @Html.LabelFor(n => n.manger_name)
                        @Html.TextBoxFor(n => n.manger_name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.manger_name)
                    </div>
                    <div class=" form-group">
                        @Html.LabelFor(n => n.manger_assistant)
                        @Html.TextBoxFor(n => n.manger_assistant, new { @class = "form-control" })
                        @Html.ValidationMessageFor(n => n.manger_assistant)
                    </div>
                    <div class=" form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            <i class="mdi mdi-account"></i> حفظ بيانات  عميل
                        </button>
                    </div>
