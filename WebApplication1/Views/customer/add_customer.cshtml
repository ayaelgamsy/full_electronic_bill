            </div>
        </div>
    </div>
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <form class="forms-sample" method="post" action="/customer/add_custumers_activity">
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="exampleInputName1">كود النشاط</label>
                                <select class="form-control" name="activity_id">
                                    <option value="0">إختر نشاط</option>
                                    @foreach (var item in (List<activity>)ViewBag.actives)
                                    {
                                        <option value="@item.activity_id">@item.activity_name</option>

                                    }



                                </select>

                            </div>
                            <div class="col-md-5 form-group">
                                <label for="exampleInputName1">ملاحظات</label>

                                <input type="text" class="form-control" id="nots" placeholder="ملاحظات" name="nots">

                            </div>
                            <div class="col-md-3 form-group">
                                <br />

                                <button type="submit" class="btn btn-success btn-rounded btn-fw" name="save "> إضافة </button>
                            </div>

                            <table class="table table-dark">
                                <thead>
                                    <tr>

                                        <th>  النشاط</th>
                                        <th> ملاحظات </th>


                                        <th> </th>

                                    </tr>
                                </thead>
                                @if (Session["custumers_actives"] as List<custumers_activity> != null)
                                {
                                    int i = 0;
                                    foreach (var item in custumers_Activities)
                                    {
                                        <tr>
                                            <td>@activitiesname.ElementAt(i).activity_name</td>
                                            <td>@item.nots</td>


                                        </tr>
                                        i = i + 1;
                                    }
                                }

                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
