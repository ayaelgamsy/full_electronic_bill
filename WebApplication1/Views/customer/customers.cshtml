@using WebApplication1.Models
@model customer
@{
    ViewBag.Title = "customers";
    List<customer> customers = ViewBag.customerslist;

}

<div class="col-lg-12 grid-margin stretch-card" dir="rtl">
<div class="card" dir="rtl">
    <div class="card-body" dir="rtl">
        <h4 class="card-title">بيانات العملاء </h4>
        <div class="form-group"></div>
        <div class="template-demo">
            <button type="submit" class="btn btn-success btn-fw" onclick="window.location.href='/customer/add_customer'">إضافة عميل </button>

        </div>
        <div class="form-group"></div>
        <table class="table table-dark">
            <thead>
                <tr>

                    <th> @Html.LabelFor(n => n.customer_id) </th>

                    <th> @Html.LabelFor(n => n.customer_name) </th>

                    <th> @Html.LabelFor(n => n.address) </th>
                    <th> @Html.LabelFor(n => n.phone) </th>

                    <th></th>
                    <th> </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in customers)
                {
                    <tr>

                        <td>@item.customer_id</td>
                        <td>@item.customer_name </td>
                        <td>@item.address </td>
                        <td>@item.phone </td>
                        <td><a href="/customer/add_customer">جديد</a></td>
                        <td><a href="/customer/update_customer/@item.customer_id">تعديل</a></td>
                        <td><a href="/customer/delete_customer/@item.customer_id"> حذف</a></td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
