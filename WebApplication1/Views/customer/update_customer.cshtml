    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <form class="forms-sample" method="post" action="/customer/add_activity_on_update">
                        <div class="row">
                            <div class="col-md-3 form-group">
                                <label for="exampleInputName1">كود النشاط</label>
                                <select class="form-control" name="activity_id">
                                    <option value="0">إختر نشاط</option>
                                    @foreach (var item in (List<activity>)ViewBag.actives)
                                    {
                                        <option value="@item.activity_id">@item.activity_name</option>

                                    }



                                </select>

                            </div>
                            <div class="col-md-5 form-group">
                                <label for="exampleInputName1">ملاحظات</label>

                                <input type="text" class="form-control" id="nots" placeholder="ملاحظات" name="nots">

                            </div>
                            <div class="col-md-3 form-group">
                                <br />

                                <button type="submit" class="btn btn-success btn-rounded btn-fw" name="save "> إضافة </button>
                            </div>

                            <table class="table table-dark">
                                <thead>
                                    <tr>

                                        <th>  النشاط</th>
                                        <th> ملاحظات </th>


                                        <th> </th>

                                    </tr>
                                </thead>


                                @foreach (var item in custumers_Activities)
                                {
                                    <tr>
                                        <td>@item.activity.activity_name</td>
                                        <td>@item.nots</td>
                                        <td>
                                        <td><a href="/customer/delete_cust_activ/@item.relation_id"> حذف</a></td>

                                    </tr>

                                }


                                <tbody>
                                </tbody>
                            </table>
                        </div>
