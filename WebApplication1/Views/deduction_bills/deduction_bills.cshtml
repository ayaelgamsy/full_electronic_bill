@using WebApplication1.Models;
@model  deduction_bills
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    List<deduction_bills> deduction_bill_list = ViewBag.deductions_billlist;
}

<div class="col-lg-12 grid-margin stretch-card" dir="rtl">
    <div class="card" dir="rtl">
        <div class="card-body" dir="rtl">
            <h4 class="card-title">فواتير الإستقطاعات</h4>
            <div class="form-group"></div>
            <div class="template-demo">
                <button type="submit" class="btn btn-success btn-fw" onclick="window.location.href='/deduction_bills/add_deduction bill'">فاتورة جديدة</button>

            </div>
            <div class="form-group"></div>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> رقم الفاتورة </th>
                        <th> النشاط  </th>
                        <th> العميل </th>

                        <th> التاريخ </th>


                        <th>الإجمالى </th>

                        <th>ضريبة القيمة المضافة </th>
                        <th>الإجمالى + القيمة المضافة </th>
                        <th> </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in deduction_bill_list)
                    {
                        <tr>

                            <td>@item.deduction_bill_id</td>
                            <td>@item.activity.activity_name</td>
                            <td>@item.customer.customer_name  </td>
                            <td>@item.date.ToShortDateString()  </td>


                            @*<td>@item.total_after_discount</td>

                            <td>@item.tax_value  </td>
                            <td>@item.final_total_plus_tax  </td*@>
                            @*<td><a href="/update_activity/delete_activity/@item.activity_id"> حذف</a></td>*@
                            <td><a href="/deduction_bills/update_deduction_bill/@item.deduction_bill_id"> تعديل</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>