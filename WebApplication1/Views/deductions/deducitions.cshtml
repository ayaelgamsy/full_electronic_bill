@using WebApplication1.Models
@model deductions
@{
    ViewBag.Title = "deductions";
    List<deductions> deductions = ViewBag.deductionslist;
}

<div class="col-lg-12 grid-margin stretch-card" dir="rtl">
    <div class="card" dir="rtl">
        <div class="card-body" dir="rtl">
            <h4 class="card-title">انواع الإستقطاعات</h4>
            <div class="form-group"></div>
            <div class="template-demo">
                <button type="submit" class="btn btn-success btn-fw" onclick="window.location.href='/deductions/creat_deduction'">إضافة تعريف إستقطاع</button>

            </div>
            <div class="form-group"></div>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> @Html.LabelFor(n => n.deduction_id) </th>

                        <th> @Html.LabelFor(n => n.deduction_name) </th>

                        <th> @Html.LabelFor(n => n.returnable) </th>
                      

                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in deductions)
                    {
                        <tr>

                            <td>@item.deduction_id</td>
                            <td>@item.deduction_name </td>
                             @if (item.returnable == false)
                             {<td>لا</td>}
                             else {<td>نعم</td> }
                            

                            <td><a href="/deductions/update_deduction/@item.deduction_id">تعديل</a></td>
                            <td><a href="/deductions/delete_deductions/@item.deduction_id"> حذف</a></td>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>