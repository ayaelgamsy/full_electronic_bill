@using WebApplication1.Models
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>إختر نشاط</title>
    <!-- plugins:css -->
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <link rel="stylesheet" href="~/Content/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Content/assets/images/favicon.png" />
</head>
<body>
    <div class="container-scroller" dir="rtl">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/Content/assets/images/logo-dark.svg">
                            </div>


                            <form class="pt-3" action="/login/register_log">
                                <div class="form-group" >
                                    <select class="form-control form-control-lg" id="user_activity" name="user_activity">
                                        <option value="0">إختر نشاط</option>
                                        @if((List<user_activity>)ViewBag.user_activity_li!=null)
                                                { 
                                        foreach (var item in (List<user_activity>)ViewBag.user_activity_li)
                                        {
                                            <option value="@item.activity_id">@item.activity.activity_name</option>

                                        }
                                        }
                                    </select>
                                </div>
                                @ViewBag.state
                                <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >إختيار</button>
                                </form>
                        </div>


                    </div>


                </div>
                
            </div>
        </div>
    </div>
   
    
    <script src=".~/Content/assets/vendors/js/vendor.bundle.base.js"></script>
    
    <script src="~/Content/assets/js/off-canvas.js"></script>
    <script src="~/Content/assets/js/hoverable-collapse.js"></script>
    <script src="~/Content/assets/js/misc.js"></script>
   
</body>
</html>