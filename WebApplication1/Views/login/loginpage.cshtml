<body>
    <div class="container-scroller" dir="rtl">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img src="~/Content/assets/images/logo-dark.svg">
                            </div>
                            
                        
                            <form class="pt-3" method="post" action="/login/choose_activity">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="user_name" name="user_name" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="Password">
                                </div>
                                <div class="form-group">
                                    <p>
                                        @if (Session["message"] != null)
                                        {
                                            Session["message"].ToString();
                                        }
                                    </p>
                                </div>
                                <div class="mt-3">

                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" name="save" id="save">تسجيل دخول</button>
                                </div>

                            </form>
                                </div>
                           
                               
                                </div>
                           
                        </div>
                    </div>
                </div>
            </div>
