@using WebApplication1.Models;
@model  out_going_billss
@{
    Layout = "~/Views/Shared/_layout.cshtml";
 List<out_going_billss> outgoingbills = ViewBag.outgoingbills;
}

<div class="col-lg-12 grid-margin stretch-card" dir="rtl">
    <div class="card" dir="rtl">
        <div class="card-body" dir="rtl">
            <h4 class="card-title">الفواتير</h4>
            <div class="form-group"></div>
            <div class="template-demo">
               <button type="submit" class="btn btn-success btn-fw" onclick="window.location.href='/out_going/add_out_going_bills'">فاتورة جديدة</button>

            </div>
            <div class="form-group"></div>
            <table class="table table-dark">
                <thead>
                    <tr>

                        <th> رقم الفاتورة </th>
                        <th> النشاط  </th>
                        <th> العميل </th>

                        <th> التاريخ </th>


                        <th>الإجمالى </th>

                        <th>ضريبة القيمة المضافة </th>
                        <th>الإجمالى + القيمة المضافة </th>
                        <th> </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in outgoingbills)
                    {
                    <tr>

                        <td>@item.bill_id</td>
                        <td>@item.activity.activity_name</td>
                        <td>@item.customer.customer_name  </td>
                        <td>@item.bill_date.ToShortDateString()  </td>


                        <td>@item.total_after_discount</td>

                        <td>@item.tax_value  </td>
                        <td>@item.final_total_plus_tax  </td>
                       @*<td><a href="/update_activity/delete_activity/@item.activity_id"> حذف</a></td>*@
                        <td><a href="/out_going/update_bill/@item.bill_id"> تعديل</a></td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>