@using WebApplication1.Models
@{
    ViewBag.Title = "settings";
    List<coins_type> coins_types = ViewBag.coinstypelist;
    List<bill_type> bill_Types = ViewBag.billtypeslist;
  List<unit> units  = ViewBag.unitslist;
}
<div class="row">
    <div class="col-md-4 grid-margin stretch-card" dir="rtl">
        <div class="card" dir="rtl">
            <div class="card-body" dir="rtl">
                <h4 class="card-title">إعداد أنواع الفواتير</h4>
                <form class="forms-sample" method="post" action="/settings/save_bill_types">
                    <div class="row">
                        <div class="col-md-9 form-group">
                            <label for="type_name">نوع الفاتورة </label>
                            <input type="text" class="form-control" id="type_name" placeholder="كود النوع" name="type_name">
                        </div>
                        <div class="col-md-9 form-group">
                            <label for="documentType">documentType </label>
                            <input type="text" class="form-control" id="documentType" placeholder="documentType" name="type_name">
                        </div>
                        <div class="col-md-9 form-group">
                            <label for="documentType">documentTypeVersion </label>
                            <input type="text" class="form-control" id="documentTypeVersion" placeholder="documentTypeVersion" name="documentTypeVersion">
                        </div>
                        <div class="col-md-3 form-group">
                            <br />
                            <button type="submit" class="btn btn-primary mr-2" name="save" id="save">إضافة</button>
                        </div>
                    </div>

                </form>
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th> نوع الفاتورة </th>
                            



                            <th> </th>

                        </tr>
                        @foreach (var item in bill_Types)
                        {
                    <tr>

                        <td>@item.type_name </td>
                       
                        <td><a href="/settings/updatecoins/?type_id=@item.type_id"> تعديل</a></td>

                    </tr>
                        }
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4 grid-margin stretch-card" dir="rtl">
        <div class="card" dir="rtl">
            <div class="card-body" dir="rtl">
                <h4 class="card-title">إعداد العملات</h4>
                <form class="forms-sample" method="post" action="/settings/save_coins">
                    <div class="row">
                        <div class="col-md-9 form-group">
                            <label for="exampleInputName1">إسم العملة </label>
                            <input type="text" class="form-control" id="coins_type" placeholder="إسم العملة" name="coins_type">
                        </div>
                        <div class="col-md-3 form-group">
                            <br />
                            <button type="submit" class="btn btn-primary mr-2" name="save" id="save">إضافة</button>
                        </div>
                    </div>

                </form>
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th> إسم العملة </th>


                            <th> </th>


                        </tr>
                        @foreach (var item in coins_types)
                        {  <tr>

    <td>@item.coin_name </td>
    <td>
    <td><a href="/settings/updatecoins/?coin_id=@item.coin_id"> تعديل</a></td>
    
</tr>
                            }
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
    <div class="col-md-4 grid-margin stretch-card" dir="rtl">
        <div class="card" dir="rtl">
            <div class="card-body" dir="rtl">
                <h4 class="card-title">إعداد وحدات القياس</h4>
                <form class="forms-sample" method="post" action="/settings/save_units">
                    <div class="row">
                        <div class="col-md-9 form-group">
                            <label for="exampleInputName1">وحدة القياس </label>
                            <input type="text" class="form-control" id="unit_name" placeholder="وحدة القياس" name="unit_name">
                        </div>
                        <div class="col-md-9 form-group">
                            <label for="exampleInputName1">الكود الضريبى </label>
                            <input type="text" class="form-control" id="tax_code" placeholder="الكود الضريبى" name="unit_name">
                        </div>
                        <div class="col-md-3 form-group">
                            <br />
                            <button type="submit" class="btn btn-primary mr-2" name="save" id="save">إضافة</button>
                        </div>
                    </div>

                </form>
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th> وحدة القياس </th>





                            <th> </th>

                        </tr>
                        @foreach (var item in units)
                        {
                            <tr>

                                <td>@item.unit_name </td>
                                <td>
                                <td><a href="/settings/updatecoins/?unit_id=@item.unit_id"> تعديل</a></td>

                            </tr>
                        }
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
